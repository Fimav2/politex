import csv

with open("students.csv",encoding="utf=8") as file:
    reader = csv.reader(file,delimiter=",",quotechar='"')
    answer =list(reader)[1:]
    for id, name, project, clas, score in answer:
        if "Хадаров Владимир" in name:
            print(f"Ты получил: {score}, за проект {id}")
            break
    class_count = {}
    sum_class = {}
    for el in answer:
        class_count[el[-2]] = class_count.get(el[-2], 0) + 1
        sum_class[el[-2]] = class_count.get(el[-2], 0) + (int(el[-1]) if el[-1] != "None" else 0)
    for el in answer:
        if el[-1] == "None":
            el[-1] = round(sum_class[el[-2]] / class_count[el[-2]], 2)
    file.close()

with open("student_new.csv", "w", newline = "", encoding = "utf-8") as file:
    writer = csv.writer(file)
    writer.writerow(["id", "Name", "titleProject_id", "class", "score"])
    writer.writerows(answer)
    
